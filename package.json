{
    "name": "validators.js",
    "version": "1.0.0",
    "description": "Bunch of validators to test value types",
    "devDependencies": {
        "eslint": "^4.15.0"
    },
    "eslintConfig": {
        "extends": "eslint:recommended",
        "parserOptions": {
            "ecmaVersion": 6,
            "sourceType": "module",
            "ecmaFeatures": {
                "modules": true,
                "jsx": false
            }
        },
        "rules": {
            "semi": ["warn", "never", {"beforeStatementContinuationChars": "always"}],
            "no-console": "off",
            "no-extra-parens": "error",
            "no-template-curly-in-string": "error",
            "array-callback-return": "error",
            "block-scoped-var": "warn"
        },
        "env": {
            "es6": true,
            "browser": true,
            "jquery": true
        },
        "globals": {
            "console": "readonly",
            "GeneratorFunction": "readonly"
        }
    }
}
